
.about {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding: 20px;
}
.logo-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px 0;
}
.logo {
    width: 80px;
    height: 80px;
    margin-bottom: 15px;
}
.app-name {
    font-size: 20px;
    color: #333;
    font-weight: bold;
    margin-bottom: 5px;
}
.version {
    font-size: 14px;
    color: #999;
}
.info-section {
    background-color: #fff;
    border-radius: 8px;
    margin-bottom: 15px;
}
.info-item {
    display: flex;
    justify-content: space-between;
    padding: 15px;
    border-bottom: 1px solid #f0f0f0;
}
.info-item:last-child {
    border-bottom: none;
}
.item-label {
    font-size: 14px;
    color: #333;
}
.item-value {
    font-size: 14px;
    color: #999;
}
.link-section {
    background-color: #fff;
    border-radius: 8px;
    margin-bottom: 15px;
}
.link-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    border-bottom: 1px solid #f0f0f0;
}
.link-item:last-child {
    border-bottom: none;
}
.link-text {
    font-size: 14px;
    color: #333;
}
.contact-section {
    background-color: #fff;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 20px;
}
.contact-title {
    font-size: 16px;
    color: #333;
    font-weight: bold;
    margin-bottom: 10px;
    display: block;
}
.contact-item {
    font-size: 14px;
    color: #666;
    margin-bottom: 5px;
    display: block;
}
.copyright {
    text-align: center;
    padding: 20px 0;
}
.copyright-text {
    font-size: 12px;
    color: #999;
    display: block;
    line-height: 1.6;
}
