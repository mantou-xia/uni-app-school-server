
.my-container {
    min-height: 100vh;
    background-color: #f5f5f5;
}
.user-info {
    display: flex;
    align-items: center;
    padding: 20rpx;
}
.avatar-box {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx;
}
.avatar {
    width: 100%;
    height: 100%;
}
.info-content {
    flex: 1;
}
.nickname {
    font-size: 32rpx;
    font-weight: bold;
}
.verify-status {
    display: flex;
    align-items: center;
    gap: 8rpx;
    margin-top: 8rpx;
}
.status-text {
    font-size: 24rpx;
    color: #ff6b6b;
}
.status-text.verified {
    color: #2ecc71;
}

