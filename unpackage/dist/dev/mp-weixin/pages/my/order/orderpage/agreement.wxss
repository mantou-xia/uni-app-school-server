
.agreement-page {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f8f9fa;
}
.header {
    background: linear-gradient(135deg, #34495e, #2c3e50);
    padding: 40rpx 30rpx;
    color: #fff;
    position: relative;
    overflow: hidden;
}
.header::after {
    content: '';
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    width: 160rpx;
    height: 160rpx;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
}
.title {
    font-size: 40rpx;
    font-weight: 600;
    margin-bottom: 16rpx;
    display: block;
    letter-spacing: 2rpx;
}
.subtitle {
    font-size: 26rpx;
    opacity: 0.9;
    letter-spacing: 1rpx;
}
.content {
    flex: 1;
    padding: 30rpx;
}
.section {
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}
.section:hover {
    transform: translateY(-2rpx);
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}
.section-title {
    font-size: 32rpx;
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 24rpx;
    position: relative;
    padding-left: 24rpx;
    display: flex;
    align-items: center;
}
.section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 32rpx;
    background: #34495e;
    border-radius: 3rpx;
}
.section-content {
    color: #5d6d7e;
    line-height: 1.8;
    font-size: 28rpx;
}
.item {
    margin-bottom: 20rpx;
    position: relative;
    padding-left: 30rpx;
}
.item::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: #34495e;
}
.sub-item {
    margin-left: 50rpx;
    margin-bottom: 16rpx;
    color: #7f8c8d;
    font-size: 26rpx;
    position: relative;
}
.sub-item::before {
    content: '-';
    position: absolute;
    left: -20rpx;
}
.footer {
    padding: 30rpx;
    background: #fff;
    box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}
.confirm-btn {
    height: 88rpx;
    line-height: 88rpx;
    background: linear-gradient(135deg, #34495e, #2c3e50);
    color: #fff;
    font-size: 32rpx;
    border-radius: 44rpx;
    box-shadow: 0 4rpx 12rpx rgba(52,73,94,0.2);
    letter-spacing: 2rpx;
    transition: all 0.3s ease;
}
.confirm-btn:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(52,73,94,0.15);
}
