
.user-card {
    background-color: #ffffff;
    padding: 20px;
    margin-bottom: 10px;
}
.user-info {
    display: flex;
    align-items: center;
}
.avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-right: 20px;
}
.user-details {
    flex: 1;
}
.username {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-bottom: 8px;
    display: block;
}
.phone, .school {
    font-size: 14px;
    color: #666;
    margin-bottom: 4px;
    display: block;
}
